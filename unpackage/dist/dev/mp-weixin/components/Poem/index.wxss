.POEM {
  -webkit-overflow-scrolling: touch;
  overflow: auto;
  padding: 20rpx;
  background-color: var(--backroundcolor);
  display: flex;
  min-height: 100%;
  flex-direction: column;
  font-size: var(--size);
}
.POEM .h1 {
  font-size: calc(var(--size)*1.5) !important;
  font-style: unset;
}
.POEM .paragraphs {
  letter-spacing: var(--letter_spacing);
  line-height: var(--line_height);
  display: flex;
  gap: 12rpx;
  flex-direction: column;
}
