.POEM {
  background-color: var(--backroundcolor);
  display: flex;
  flex-direction: column;
  justify-content: center;
  font-size: var(--size);
}
.POEM .h1 {
  font-size: calc(var(--size)*1.5) !important;
  font-style: unset;
}
.POEM .paragraphs {
  letter-spacing: var(--letter_spacing);
  line-height: var(--line_height);
  display: flex;
  gap: 12rpx;
  flex-direction: column;
}
